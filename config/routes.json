{
    "homepage":{
        "path":"/",
        "method":"GET",
        "controller":"Homepage::index"
    },
    "user":{
        "profile":{
            "path":"/user/{id}",
            "method":"GET",
            "controller":"User::profile"
        },
        "login":{
            "path":"/login",
            "method":"GET",
            "controller":"User::login"
        },
        "login_handler":{
            "path":"/login",
            "method":"POST",
            "controller":"User::handleLogin"
        },
        "register":{
            "path":"/register",
            "method":"GET",
            "controller":"User::register"
        },
        "register_handler":{
            "path":"/register",
            "method":"POST",
            "controller":"User::handleRegistration"
        },
        "unlogin":{
            "path":"/unlogin",
            "method":"GET",
            "controller":"User::unlogin"
        }
    },
    "error":{
        "path":"/_error/{code}",
        "method":"any",
        "controller":"Error::error"
    }
}